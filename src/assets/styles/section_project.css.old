#project {
  background-color: #eaeaea;
  padding: 40px 0 70px 0;
}

#project .container h2 {
  text-align: center;
}

#project .container #content {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 3% 5%;
  padding: 5% 0 10% 0;
}

#project .box {
  border: 3px solid black;
  border-radius: 8px;
  box-shadow: 4px 4px 6px black;
  padding: 15px;
  transition: transform 0.3s ease;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

#project .box:hover {
  transform: scale(1.1);
}

#project .box-carousel {
  border: 2px solid black;
  border-radius: 5px;
  box-shadow: 2px 2px 3px black;
  background-color: black;
  color: #f6f6f6;
  display: flex;
  align-items: center;
}

#project .box-explanation {
  flex-grow: 1;
  margin-top: 15px;
}

#project .box-explanation h2,
#project .box-explanation p {
  text-align: left;
}

#project .box-develop-by {
  padding: 15px 0;
}

#project .child-box {
  cursor: pointer;
  background-color: #eaeaea;
  border: 2px solid black;
  border-radius: 5px;
  box-shadow: 2px 2px 3px black;
  padding: 5px 8px;
  display: inline-flex;
  margin-top: 8px;
  margin-right: 8px;
}

.img-project {
  cursor: pointer;
  max-width: 100%;
  height: auto;
}

@media screen and (max-width: 1000px) {
  #project .container #content {
    display: block;
    padding: 0 3px;
  }

  #project .box {
    margin-top: 25px;
    transition: none;
  }

  #project .box:hover {
    transform: none;
  }

  #project .child-box {
    text-align: center;
  }
}
